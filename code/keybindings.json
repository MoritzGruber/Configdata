// Keyboard Shortcuts for Visual Studio Code
[   
    // Duplicate Line
    { "key": "ctrl+d",        "command": "editor.action.copyLinesDownAction",
                                     "when": "editorTextFocus" },
    // Move Line Down
    { "key": "ctrl+shift+down",              "command": "editor.action.moveLinesDownAction",
                                     "when": "editorTextFocus" },
    // Move Line Up
    { "key": "ctrl+shift+up",                "command": "editor.action.moveLinesUpAction",
                                     "when": "editorTextFocus" },
    // Comment Line Out
    { "key": "ctrl+7",                "command": "editor.action.commentLine",
                                     "when": "editorTextFocus" },
    // Comment Line Out
    { "key": "ctrl+shift+7",                "command": "editor.action.commentLine",
                                     "when": "editorTextFocus" },
    // Add & Jump in a new Line below
    { "key": "shift+enter",            "command": "editor.action.insertLineAfter",
                                     "when": "editorTextFocus" }
]
